<h1>Listing Sale on Sale Imports</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>File Name</th>
      <th>Uploaded by</th>
      <th>Uploaded at</th>
      <th>Download</th>
    </tr>
  </thead>
  <tbody>
    <% @sale_on_sale_imports.each do |sale_on_sale_import| %>
      <tr>
        <td><%= sale_on_sale_import.attachment_file_name %></td>
        <td><%= sale_on_sale_import.user.firstname %></td>
        <td><%= sale_on_sale_import.created_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
        <td><%= link_to 'Download', sale_on_sale_import.attachment.url, :class => "btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Sale on Sale Import', new_sale_on_sale_import_path %>

<%= will_paginate @sale_on_sale_imports %>
