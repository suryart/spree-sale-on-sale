<h1>New Sale on Sale Import</h1>
<% form_for @sale_on_sale do |form| %>
   <%= text_field_tag "sku", nil, :placeholder=> "SKU" %><br/>
   <%= form.text_field :amount , :placeholder=> "Promotion Amount" %><br/>
   <%= form.datetime_select :starts_at, {:order => [:day, :month, :year], :ampm => true}, { :class => "span1"}  %><br/>
   <%= form.datetime_select :expires_at, {:order => [:day, :month, :year], :ampm => true}, { :class => "span1"} %><br/>
   <%= form.submit(:class => "btn btn-primary") %>
   <% end %>
<%= link_to 'Back', sale_on_sales_path %>